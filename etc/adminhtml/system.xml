<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="propultech_webpayplusmall" translate="label" type="text" sortOrder="50" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>Webpay Plus Mall</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Payment Title</label>
                </field>

                <field id="environment" translate="label" type="select" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Environment</label>
                    <source_model>Transbank\Webpay\Model\Config\Environment</source_model>
                </field>

                <field id="api_key" translate="label" type="password" sortOrder="60" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>API Key</label>
                </field>

                <field id="commerce_code" translate="label" type="text" sortOrder="65" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Mall Commerce Code</label>
                </field>

                <field id="commerce_codes" translate="label" sortOrder="70" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Child Commerce Codes</label>
                    <frontend_model>Propultech\WebpayPlusMallRest\Block\Adminhtml\Form\Field\CommerceCodesRow</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>

                <field id="shipping_commerce_code" translate="label" type="text" sortOrder="75" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Shipping Commerce Code</label>
                </field>

                <field id="payment_successful_status" translate="label" type="select" sortOrder="90" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Success payment status</label>
                    <source_model>Transbank\Webpay\Model\Config\OrderStatus</source_model>
                </field>

                <field id="payment_error_status" translate="label" type="select" sortOrder="100" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Error payment status</label>
                    <source_model>Transbank\Webpay\Model\Config\OrderStatus</source_model>
                </field>

                <field id="new_order_status" translate="label" type="select" sortOrder="110" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>

                <field id="sort_order" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Position</label>
                    <frontend_class>validate-number</frontend_class>
                </field>

                <field id="new_email_order" translate="label" type="select" sortOrder="130" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Email send behavior</label>
                    <source_model>Transbank\Webpay\Model\Config\ConfigEmail</source_model>
                </field>

                <field id="invoice_settings" translate="label" type="select" sortOrder="140" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Invoice Generation</label>
                    <source_model>Transbank\Webpay\Model\Config\ConfigInvoice</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
