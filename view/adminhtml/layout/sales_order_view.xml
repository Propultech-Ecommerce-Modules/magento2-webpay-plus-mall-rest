                   name="propultech_webpayplusmall_admin_order_payment_info"
                   template="Propultech_WebpayPlusMallRest::order/view/payment_info.phtml">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Payment Information (Webpay Plus Mall)</argument>
                </arguments>
            </block>
            <block class="Propultech\WebpayPlusMallRest\Block\Adminhtml\Order\View\PaymentInfo"
                   name="propultech_webpayplusmall_admin_order_simplified_payment_info"
                   template="Propultech_WebpayPlusMallRest::order/view/simplified_payment_info.phtml">
